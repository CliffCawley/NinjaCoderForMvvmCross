    <!-- Upgrade options -->
    <Property Id="PREVIOUSVERSIONSINSTALLED" Secure="yes" />
    <Upgrade Id="825c8b3c-e1ee-4eae-85b2-175f15b0b3bf">
      <UpgradeVersion
