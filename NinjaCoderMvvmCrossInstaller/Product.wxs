              <File Id="ScorchioLibrary" Name="Scorchio.VisualStudio.dll"
                Source="$(var.SOURCE_DIR)\NinjaCoder.MvvmCross.UI\bin\Debug\Scorchio.VisualStudio.dll" Vital="yes" KeyPath="no" >
